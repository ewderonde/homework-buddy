<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Homework Buddy{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
            <link href="{{ asset('bundles/css/bootstrap/bootstrap.min.css') }}" rel="stylesheet">
            {#<link href="{{ asset('bundles/css/jquery-ui-1.12.1/jquery-ui.min.css') }}" rel="stylesheet">#}
            <link href="{{ asset('bundles/css/datepicker-custom.css') }}" rel="stylesheet">
            <link href="{{ asset('bundles/css/main.css') }}" rel="stylesheet">

            <link href="{{ asset('bundles/css/font-awesome-4.7.0/css/font-awesome.min.css') }}" rel="stylesheet">

            <link href="{{ asset('bundles/css/styles.css') }}" rel="stylesheet">
            <link href="{{ asset('bundles/css/popup.css') }}" rel="stylesheet">
            <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-10">
                            <!-- Logo -->
                            <div class="col-md-2 col-md-offset-2 logo ">
                                <h1 style="margin-left:10px"><a href="#">{{ title }}</a></h1>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="navbar navbar-inverse" role="banner">
                                <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                                    <ul class="nav navbar-nav">
                                        <li class="dropdown"> <a href="{{ path('logout') }}">Logout</a>
                                            {#<a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>#}
                                            {#<ul class="dropdown-menu animated fadeInUp">#}
                                                {#<li><a href="{{ path('profile_index') }}">Profielen</a></li>#}
                                                {#<li></li>#}
                                            {#</ul>#}
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="page-content container">
            <div class="row">
                <div class="col-md-2">
                    <div class="sidebar content-box" style="display: block;">
                        <ul class="nav">
                            <!-- Main menu -->
                            <li class="{% if current_path == 'dashboard' %}current{% endif %}"><a href="{{ path('dashboard') }}"><i class="glyphicon glyphicon-home"></i> Dashboard</a></li>
                            <li class="{% if current_path == 'agenda' %}current{% endif %}"><a href="{{ path('agenda_index') }}"><i class="glyphicon glyphicon-calendar"></i> Agenda</a></li>
                            <li class="{% if current_path == 'grades' %}current{% endif %}"><a href="{{ path('grade_index') }}"><i class="glyphicon glyphicon-stats"></i> Cijfers</a></li>
                            <li class="{% if current_path == 'subjects' %}current{% endif %}"><a href="{{ path('subject_index') }}"><i class="glyphicon glyphicon-book"></i> Vakken</a></li>
                            <li class="{% if current_path == 'manage' %}current{% endif %}"><a href="{{ path('profile_index') }}"><i class="glyphicon glyphicon-cog"></i> Beheren</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Page content -->
                <div class="col-md-10" style="overflow: hidden">
                    <div class="row">
                        {% block body %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>

        <footer style="position: fixed; width:100%;">
            <div class="container">

                <div class="copy text-center">
                    Copyright 2017 <a href='{{ path('dashboard') }}'>Homework Buddy</a>
                </div>

            </div>
        </footer>



        {% block javascripts %}
            <script src="{{ asset('bundles/js/jquery.min.js') }}"></script>
            <script src="{{ asset('bundles/css/jquery-ui-1.12.1/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('bundles/js/tether.min.js') }}"></script>
            <script src="{{ asset('bundles/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('bundles/js/agenda.js') }}"></script>
            <script src="{{ asset('bundles/js/custom.js') }}"></script>
            <script src="{{ asset('bundles/js/popup.js') }}"></script>
            <script src="{{ asset('bundles/js/timepicker.js') }}"></script>
            {% if current_path == 'grades' or current_path == 'dashboard' %}
                <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
                <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
                <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
                <script src="{{ asset('bundles/js/grade.js') }}"></script>
            {% endif %}
        {% endblock %}
    </body>
</html>
